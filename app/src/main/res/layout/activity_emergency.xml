<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/bgwithpuzzle"
tools:context=".emergency">

    <Button
        android:id="@+id/backtoregidterr"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/back_button" />

<ImageView
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:background="@drawable/applogo"
    android:layout_marginLeft="355dp"/>

<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:layout_marginTop="45dp"
    tools:context=".emergency" />

    <Button
        android:id="@+id/getlocatiiion"
        android:layout_width="148dp"
        android:layout_height="39dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="600dp"
        android:background="@drawable/square"
        android:fontFamily="@font/acme"
        android:text="@string/GetLocation"
        android:visibility="visible" />

    <TextView
    android:id="@+id/textView"
    android:layout_width="240dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="555dp"
    android:textColor="@color/black"
    android:text="@string/LocationDisplay"
    android:visibility="visible"
    android:fontFamily="@font/acme"/>

<EditText
    android:id="@+id/editTextLat"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="250dp"
    android:layout_marginTop="560dp"
    android:hint="@string/Latitude"
    android:textColor="@color/black"
    android:visibility="visible"
    android:fontFamily="@font/acme"/>

<EditText
    android:id="@+id/editTextLong"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="250dp"
    android:layout_marginTop="610dp"
    android:hint="@string/Longitude"
    android:textColor="@color/black"
    android:fontFamily="@font/acme"
    android:visibility="visible"/>


</FrameLayout>