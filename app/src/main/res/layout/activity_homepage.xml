<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_logout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".homepage"
    tools:ignore="MissingClass"
    tools:openDrawer="start">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="320dp"
        android:layout_height="560dp"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:menu="@menu/homepage_menu">

    </com.google.android.material.navigation.NavigationView>





    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bgfinal5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar1"
            android:layout_width="414dp"
            android:layout_height="39dp"
            android:layout_marginTop="01dp"
            android:background="@drawable/toolbar"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@android:drawable/ic_menu_agenda" />


        <TextView
            android:id="@+id/emailnotverified"
            android:layout_width="229dp"
            android:layout_height="36dp"

            android:text="Email is not Verified"
            android:textColor="#000000"
            android:textSize="25dp"
            android:visibility="gone"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar1" />


        <Button
            android:id="@+id/verifybutton"
            android:layout_width="102dp"
            android:layout_height="32dp"
            android:layout_marginTop="28dp"

            android:background="#00FFFFFF"
            android:text="VERIFY"
            android:textSize="10dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.463"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/emailnotverified" />

        <ScrollView
            android:layout_width="409dp"
            android:layout_height="600dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.647">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/helpme"
                        android:layout_width="125dp"
                        android:layout_height="122dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/helpme1"
                        android:text="Help me"
                        android:textColor="#00F4EDED" />

                    <Button
                        android:id="@+id/okay"
                        android:layout_width="125dp"
                        android:layout_height="122dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/ok1"
                        android:text="Okay"
                        android:textColor="#00F4EDED" />

                    <Button
                        android:id="@+id/no"
                        android:layout_width="125dp"
                        android:layout_height="122dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/no1"
                        android:text="No"
                        android:textColor="#00F4EDED" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="141dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="Help me"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="141dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="Okay"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="141dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="No"
                        android:textColor="@color/black"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/wantToeat"
                        android:layout_width="125dp"
                        android:layout_height="122dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/wanttoeat1"
                        android:text="Want to eat"
                        android:textColor="#00F4EDED" />

                    <Button
                        android:id="@+id/drinkwater"
                        android:layout_width="130dp"
                        android:layout_height="122dp"
                        android:background="@drawable/wanttodrinkwater1"
                        android:layout_marginLeft="10dp"
                        android:text="Drink water"
                        android:textColor="#00F4EDED"
                        />

                    <Button
                        android:id="@+id/toilet"
                        android:layout_width="125dp"
                        android:layout_height="122dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/toilet1"
                        android:text="Toilet"
                        android:textColor="#00F4EDED" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="141dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="Hungry"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="141dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="Drink water"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="141dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="Toilet"
                        android:textColor="@color/black"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/happy"
                        android:layout_width="125dp"
                        android:layout_height="122dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/happy1"
                        android:text="Happy"
                        android:textColor="#00F4EDED" />

                    <Button
                        android:id="@+id/sad"
                        android:layout_width="125dp"
                        android:layout_height="122dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/sad1"
                        android:text="Sad"
                        android:textColor="#00F4EDED" />

                    <Button
                        android:id="@+id/scared"
                        android:layout_width="125dp"
                        android:layout_height="122dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/scared1"
                        android:text="Scared"
                        android:textColor="#00F4EDED" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="141dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="Happy"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="141dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="Sad"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="141dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="scared"
                        android:textColor="@color/black"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="126dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/angry"
                        android:layout_width="125dp"
                        android:layout_height="122dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/angry1"
                        android:text="Angry"
                        android:textColor="#00F4EDED" />

                    <Button
                        android:id="@+id/sick"
                        android:layout_width="125dp"
                        android:layout_height="122dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/sick1"
                        android:text="Sick"
                        android:textColor="#00F4EDED" />

                    <Button
                        android:id="@+id/sleep"
                        android:layout_width="125dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/wanttosleep1"
                        android:text="Sleep"
                        android:textColor="#00F4EDED" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="141dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="Angry"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="141dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="Sick"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="141dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="Sleep"
                        android:textColor="@color/black"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/wheresmom"
                        android:layout_width="125dp"
                        android:layout_height="122dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/wheresmom1"
                        android:text="Where's mom?"
                        android:textColor="#00F4EDED" />


                    <Button
                        android:id="@+id/wantToplay"
                        android:layout_width="125dp"
                        android:layout_height="122dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/wanttoplay1"
                        android:text="Want to play"
                        android:textColor="#00F4EDED" />


                    <Button
                        android:id="@+id/washHands"
                        android:layout_width="125dp"
                        android:layout_height="122dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/washhands1"
                        android:text="Wash hands"
                        android:textColor="#00F4EDED" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="141dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="Where's mom?"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="135dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:text="Want to play"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="141dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:text="Wash hands"
                        android:textColor="@color/black"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/cold"
                        android:layout_width="125dp"
                        android:layout_height="122dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/cold1"
                        android:text="Cold"
                        android:textColor="#00F4EDED" />

                    <Button
                        android:id="@+id/uncomfortable"
                        android:layout_width="125dp"
                        android:layout_height="122dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/uncomfortable1"
                        android:text="Uncomfortable"
                        android:textColor="#00F4EDED" />

                    <Button
                        android:id="@+id/dontTouch"
                        android:layout_width="125dp"
                        android:layout_height="122dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/donttouchme1"
                        android:text="Don't touch"
                        android:textColor="#00F4EDED" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="141dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="cold"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="135dp"
                        android:layout_height="match_parent"
                        android:text="Uncomfortable"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="141dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:text="Don't touch me"
                        android:textColor="@color/black"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/thankyou"
                        android:layout_width="125dp"
                        android:layout_height="122dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/thankyou"
                        android:text="Thank you"
                        android:textColor="#00F4EDED" />

                    <Button
                        android:id="@+id/sorry"
                        android:layout_width="125dp"
                        android:layout_height="122dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/sorry1"
                        android:text="Sorry"
                        android:textColor="#00F4EDED" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <TextView
                        android:layout_width="141dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:text="Thank you"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="141dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:text="sorry"
                        android:textColor="@color/black"
                        android:textSize="15dp" />
                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout"
                    android:layout_width="match_parent"
                    android:layout_height="168dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent">


                    <Button
                        android:id="@+id/button113"
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:layout_marginTop="14dp"
                        android:layout_marginLeft="24dp"
                        android:background="@drawable/moreactions"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.167"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Button
                        android:id="@+id/emergency"
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:layout_marginTop="14dp"
                        android:layout_marginRight="44dp"
                        android:background="@drawable/emergency1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/button113"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </LinearLayout>
        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.drawerlayout.widget.DrawerLayout>





